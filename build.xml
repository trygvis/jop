				<pathelement location="java/lib/RXTXcomm.jar"/>
			</classpath>
			<arg line="${com-flag} java/target/dist/bin/${jopbin} ${com-port}"/>
		</java>
<!--
	this is the download version with down.exe

		<exec executable="down" spawn="true">
			<arg line="${com-flag} java/target/dist/bin/${jopbin} ${com-port}"/>
		</exec>
-->
